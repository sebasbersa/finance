<%- include('../partials/header') %>
<div class="container-fluid" style="margin-top: 20px;">
  <div class="row">
    <div class="col-lg-5">
      <div align='center'>
        <h3 style="text-align: center;">Nuevo <%=flujo.name%> </h3>
        <form class="form-group nuevo-item" action="/flujos/nFlujo" method="POST">
          <input  class="form-control" id="nombreFlujo" name="nombreFlujo" type="text" placeholder="Nombre <%=flujo.name%>">
          <input  class="form-control" id="valorFlujo" name="valorFlujo" type="number" placeholder="Cantidad">
          <% if(flujo.id === 1 || flujo.id === 2 ){ %>
          <input name="fecha" type="date">
          <% } %>
          <br class="notmobil">
          <button  class="btn btn-primary" type="submit" name="tipoFlujo" value=<%=flujo.id%>>Ingresar</button>
        </form>
      </div>
    </div>
    <div class="col-lg-7">
      <h3 style="text-align: center;">Tabla de <%=flujo.tabla%> </h3>
      <%- include('../partials/components/flujos') %>
    </div>
  </div>
</div>

<p class="positionDescripcion"><%=flujo.descripcion%></p>



<%- include('../partials/footer') %>
