<%- include('partials/header') %>


<h1>Dashboard</h1>
<div class="container">
  <div class="row">
    <div class="col-8"></div>
    <div class="col-4">

      <form class="form-group" action="/" method="post">
        <h6 align="left">Filtrar por mes: </h6><input type="month" name="fecha" id="fecha" class="form-control" value=<%=mes%> >
        <button class="btn btn-primary btn-sm" type="submit" name="button">Filtrar</button>
      </form>
    </div>

  </div>

</div>


<table class="table table-sm table-bordered table-hover" style="max-width: 600px;">
  <thead class="table-primary">
    <tr>
      <th scope="col">INGRESOS</th>
      <th scope="col">CANTIDAD</th>
    </tr>
  </thead>
  <tbody>
  <tr>
    <th>Ingresos Activos</th>
    <td>$<%=activos.toLocaleString('de-DE')%></td>
  </tr>
  <tr>
    <th>Ingresos Pasivos</th>
    <td>$<%=pasivos.toLocaleString('de-DE')%></td>
  </tr>
  </tbody>
</table>
<br>

<table class="table table-sm table-bordered table-hover" style="max-width: 600px;">
  <thead class="table-primary">
    <tr>
      <th scope="col">GASTOS</th>
      <th scope="col">CANTIDAD</th>
    </tr>
  </thead>
  <tbody>
  <tr>
    <th>Gastos Generales</th>
    <td>$<%=gastos.toLocaleString('de-DE')%></td>
  </tr>
  <tr>
    <th>Gastos Mensuales</th>
    <td>$0</td>
  </tr>
  </tbody>
</table>





<%- include('partials/footer') %>
