<%- include('partials/header') %>
<h1>Dashboard</h1>
<div class="container-fluid notmobil">
  <div class="row">
    <div class="col-6">
    <div class="col-6">
      <form class="form-group" action="/" method="post">
        <h6 align="left">Filtrar por mes: </h6><input type="month" name="fecha" id="fecha" class="form-control" value=<%=mes%> >
        <button class="btn btn-primary btn-sm btn-margin" type="submit" name="button">Filtrar</button>
      </form>
    </div>
  </div>
</div>
</div>
<div class="container notdesktop">
  <h1>notdesktop</h1>
  <div class="row">
    <div class="col-12">
      <form class="form-group" action="/" method="post">
        <h6 align="left">Filtrar por mes: </h6><input type="month" name="fecha" id="fecha" class="form-control" value=<%=mes%> >
        <button class="btn btn-primary btn-sm btn-margin" type="submit" name="button"">Filtrar</button>
      </form>
    </div>
  </div>
</div>
<hr>
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-6">
      <table class="table table-sm table-bordered table-hover" style="max-width: 600px;">
        <thead class="table-primary">
          <tr>
            <th scope="col">INGRESOS</th>
            <th scope="col">CANTIDAD</th>
          </tr>
        </thead>
        <tbody>
        <tr>
          <th>Ingresos</th>
          <td>$<%=ingresos.toLocaleString('de-DE')%></td>
        </tr>
        <tr>
          <th>Ingresos Mensuales</th>
          <td>$<%=ingresoMensual.toLocaleString('de-DE')%></td>
        </tr>
        <tr>
          <th>Ingresos Pasivos</th>
          <td>$<%=activos.toLocaleString('de-DE')%></td>
        </tr>
        </tbody>
      </table>
      <br>
      <table class="table table-sm table-bordered table-hover" style="max-width: 600px;">
        <thead class="table-primary">
          <tr>
            <th scope="col">GASTOS</th>
            <th scope="col">CANTIDAD</th>
          </tr>
        </thead>
        <tbody>
        <tr>
          <th>Gastos Generales</th>
          <td>$<%=gastos.toLocaleString('de-DE')%></td>
        </tr>
        <tr>
          <th>Gastos Mensuales</th>
          <td>$<%=gastoMensual.toLocaleString('de-DE')%></td>
        </tr>
        <tr>
          <th>Gastos de Pasivos</th>
          <td>$<%=pasivos.toLocaleString('de-DE')%></td>
        </tr>
        </tbody>
      </table>
    </div>

    <div class="col-lg-6">
      <h4>Objetivo: <%=pasivosMeta%>%</h4>
      <div class="progress">
        <div class="progress-bar bg-info" role="progressbar" style="width: <%=pasivosMeta%>%" aria-valuenow='50' aria-valuemin="0" aria-valuemax="100"></div>
      </div>
      <h5>Ingresos: $<%=ingresoMensual.toLocaleString('de-DE')%></h5>
      <h5>Gastos: $<%=gastoMensual.toLocaleString('de-DE')%></h5>
      <hr>
      <h5>Cash Flow: $<%=cashflow.toLocaleString('de-DE')%></h5>
    </div>
  </div>
</div>

<hr>

<div class="container-fluid">
  <div class="row">
    <div class="col-lg-6">
      <table class="table table-sm table-bordered table-hover" style="max-width: 600px;">
          <thead class="table-primary">
            <tr>
              <th scope="col">ACTIVO</th>
              <th scope="col">CANTIDAD</th>
            </tr>
          </thead>
          <tbody>
            <% usuario.activos.forEach(function(activo){ %>
            <tr>
              <th><%=activo.nombre%></th>
              <td>$<%= activo.valor.toLocaleString('de-DE') %></td>
            </tr>
            <% }) %>
      </table>
    </div>
    <div class="col-lg-6">
      <table class="table table-sm table-bordered table-hover" style="max-width: 600px;">
          <thead class="table-primary">
            <tr>
              <th scope="col">PASIVO</th>
              <th scope="col">CANTIDAD</th>
            </tr>
          </thead>
          <tbody>
            <% usuario.pasivos.forEach(function(pasivo){ %>
            <tr>
              <th><%=pasivo.nombre%></th>
              <td>$<%= pasivo.valor.toLocaleString('de-DE') %></td>
            </tr>
            <% }) %>
      </table>
    </div>
  </div>
</div>

<div class="static-bottom">
  <div class="static-hbottom">
  </div>
  <div class="bottom-div">
    <div class="input-group">
      <h5 class="ms-auto" style="margin-right: 10px;">Agregar mes</h5>
      <span class="input-group-btn">
        <form class="form-group" action="/agregarMes" method="post">
          <button type="submit" class="btn btn-success btn-sm ms-auto" name="button">Agregar</button>
        </form>
      </span>
    </div>
  </div>
</div>



<%- include('partials/footer') %>
